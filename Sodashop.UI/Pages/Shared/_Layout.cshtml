<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sodashop.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sodashop.UI.styles.css" asp-append-version="true" />
</head>
@{
    string page = ViewContext.RouteData.Values["page"] as string;
}
<body>
    <style>
        .single {
            padding: 30px 15px;
            background: #05BDF6;
            border: 1px solid #f0f0f0; }
            .single h3.side-title {
            margin: 0;
            margin-bottom: 5px;
            padding: 0;
            font-size: 20px;
            color: #FFF;
            text-transform: uppercase; }

         .single ul {
            margin-bottom: 0; }
            .single li a {
            color: #FFF;
            font-size: 14px;
            text-transform: uppercase;
            
            line-height: 40px;
            display: block;
            text-decoration: none; }
    </style>
    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background: #05BDF6">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-page="/Index"><h1>Läskforall</h1></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if(page.StartsWith("/Index")) {
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link text-dark align-self-end" asp-area="" asp-page="/Login/Login"><button style="background: #78DDFF; color:white" class="btn">Login</button></a>
                        </li>
                        </ul>

                    }  else if(page.StartsWith("/Login"))
                    {
                        //Render no button on login page
                    }
                     else
                    {
                        //render logout button on every page that is not Index or login
                        <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link text-dark align-self-end" asp-area="" asp-page="/Index"><button style="background: #78DDFF; color:white" class="btn">Logout</button></a>
                        </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @*@if (page.StartsWith("/StorePages/FrontStore"))
            {
            <div class="dropdown">
                  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    LÄSK
                  </button>
                  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                      <div class="single category">
                            <ul class="list-unstyled">
			                    <li><a >Fanta</a></li>
			                    <li><a >Coca Cola</a></li>
			                    <li><a >Sprite</a></li>
		                    </ul>
                      </div>
                  </div>
                </div>

            }*@
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Sodashop - <a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>